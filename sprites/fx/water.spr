sprite SD_WATERAIRBUBBLE
{
	source_file		images/water.png
	source_rect     0 128 298 32
    frame_size      32 32
    hot_spot        16 16

    // small bubble
    animation 0
    {
        repeat      TRUE
        fps         8
        data        1
    }

    // growing bubble
    animation 1
    {
        repeat      FALSE
        fps         8
        data        0 0 0 0 0 0 0 0 1 2 3 4 5 6
    }

    // bloft!
    animation 2
    {
        repeat      FALSE
        fps         8
        data        7 8
    }

    // medium bubble
    animation 3
    {
        repeat      TRUE
        fps         8
        data        2
    }

    // very small bubble
    animation 4
    {
        repeat      TRUE
        fps         8
        data        0
    }
}
