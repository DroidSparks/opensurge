sprite SD_WATERLEVEL
{
	source_file		images/water.png
	source_rect     0 0 320 14
    frame_size      320 7
    hot_spot        0 0

    animation 0
    {
        repeat      TRUE
        fps         8
        data        0 1
    }
}

