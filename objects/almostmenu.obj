// almost in the menu...
// script by Alexandre
object ".almostmenu_startup"
{
    requires 0.2.0
    detach_from_camera
    always_active

    state main
    {
        let $_fade_in=1
        let $_fade_duration=2
        create_child .fade_effect

        set_absolute_position screen_width()/2 screen_height()/2
        set_animation SD_ALMOSTMENU 17
        set_scale 0 0
        change_state appear
    }

    state appear
    {
        let $f=2*sin($t*(pi()/(2*0.75)))
        let $t=min(1.25,$t+1.25*dt())
        set_scale $f $f
        on_timeout 1.25 next
    }

    state next
    {
        next_level
    }
}
