# Tip: you may run 'ccmake .' to access the advanced options
if [ -e ./CMakeLists.txt ]; then

  # can I remove $HOMEDATA_DIR ?
  HOMEDATA_DIR=`echo ~/.opensurge/`
  if [ -e "$HOMEDATA_DIR" ]; then
    echo "==============================================================================="
    echo "                                 ATTENTION !                                   "
    echo "==============================================================================="
    echo "It looks like you have already executed some version of the Open Surge Engine"
    echo -e "in this computer. Do you wish to remove the data folder \"$HOMEDATA_DIR\","
    echo -n "so that you get a clean installation? (y/n) "
    while true; do
      read dummy
      case $dummy in
        y|Y|yes|YES|Yes)
          rm -rf "$HOMEDATA_DIR"
          echo -e "The folder has been removed.\n"
          break ;;
        n|N|no|NO|No)
          echo -e "Okay then.\n"
          break;;
      esac
      echo -ne "Delete folder \"$HOMEDATA_DIR\"? (y/n) "
    done
  fi

  # calling cmake
  cmake $@ .

else

  # path error?
  PWD_DIR=`pwd`
  SCRIPT_DIR=`echo $0 | sed 's,^\(.*\)/\(.*\)$,\1,g'`
  ME=`echo $0 | sed 's,^\(.*\)/\(.*\)$,\2,g'`
  REQUIRED_FILE="$SCRIPT_DIR/CMakeLists.txt"

  if [ -e "$REQUIRED_FILE" ]; then
    cd ${SCRIPT_DIR}
    ./${ME} $@
    cd ${PWD_DIR}
  else
    echo -e "Fatal error: \"$REQUIRED_FILE\" not found!"
    echo "Please download the source package again."
  fi

fi
